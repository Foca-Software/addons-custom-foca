<odoo>
    <record id="add_planilla_config_form" model="ir.ui.view">
        <field name="name">cash.control.config.form</field>
        <field name="model">cash.control.config</field>
        <field name="inherit_id" ref="cash_control.cash_control_config_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='current_session_id']" position="after">
                <field name="id_debo" attrs="{'invisible': [('id_debo', '=', False)]}"/>
            </xpath>
            <xpath expr="//field[@name='location_id']" position="replace">
                <field name="sector_ids" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>


    <record id="add_planilla_config_tree" model="ir.ui.view">
        <field name="name">cash.control.config.tree</field>
        <field name="model">cash.control.config</field>
        <field name="inherit_id" ref="cash_control.cash_control_config_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='current_session_id']" position="after">
                <field name="id_debo"/>
            </xpath>
        </field>
    </record>
</odoo>