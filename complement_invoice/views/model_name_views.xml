<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="cash_control_config_type_view_form" model="ir.ui.view">
        <field name="name">cash.control.config.type.view.form</field>
        <field name="model">cash.control.config.type</field>
        <field name="arch" type="xml">
            <form string="Config Types">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="place_of_sale"/>
                        <field name="sells_fuel" invisible="1"/>
                        <field name="config_ids" widget="many2many_tags"/>
                    </group>
                    <group name="complement" string="">
                        <field name="uses_complement_invoice"/>
                        <field name="creates_complement_invoice_in_pos" attrs="{'invisible':[('uses_complement_invoice','=',False)]}"/>
                        <field name="creates_complement_invoice_in_cloud" attrs="{'invisible':[('uses_complement_invoice','=',False)]}"/>
                    </group>
                    <notebook>

                    </notebook>
                </sheet>
            </form>
        </field>
    </record>    
</odoo>
