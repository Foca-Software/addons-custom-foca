<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- account.move action window -->
    <record id="view_complement_invoices_action" model="ir.actions.act_window">
        <field name="name">Complement Invoices</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{
            'default_debo_transaction_type': 'complement',
            'default_type' : 'out_invoice'
        }</field>
        <field name="domain">[('debo_transaction_type','=','complement'),('type','=','out_invoice')]</field>
    </record>
    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="complement_invoice_menu_act" name="Complement Invoices" parent="account.menu_finance_receivables" action="view_complement_invoices_action" sequence="2"/>

    <!-- account.move inherit form view -->
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.inherit.view.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='session_id_debo']" position="after">
                <field name="debo_transaction_type" invisible="1"/>
                <field name="planilla" attrs="{'invisible':[('debo_transaction_type','!=','complement')]}"/>
                <field name="config_type"/>
                <field name="config_uses_complement_invoice"/>
            </xpath>
            <xpath expr="//field[@name='session_id_debo']" position="attributes">
                <attribute name="attrs">{'invisible':[('debo_transaction_type','=','complement')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='tax_ids']" position="before">
                <field name="complement_percentage" attrs="{'column_invisible':[('parent.debo_transaction_type','!=','complement')]}"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="attributes">
                <attribute name="attrs">{'column_invisible':[('parent.debo_transaction_type','=','complement')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="after">
                <field name="complement_product_id" attrs="{'column_invisible':[('parent.debo_transaction_type','!=','complement')],'required':[('parent.debo_transaction_type','=','complement')]}"/>
            </xpath>
        </field>
    </record>
</odoo>