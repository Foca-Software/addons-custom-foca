<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- cash.control.turn tree view -->
    <record id="cash_control_turn_view_tree" model="ir.ui.view">
        <field name="name">cash.control.turn.view.tree</field>
        <field name="model">cash.control.turn</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="start_time" widget="float_time"/>
                <field name="end_time" widget="float_time"/>
            </tree>
        </field>
    </record>

    <!-- cash.control.turn form view -->
    <record id="cash_control_turn_view_form" model="ir.ui.view">
        <field name="name">cash.control.turn.view.form</field>
        <field name="model">cash.control.turn</field>
        <field name="arch" type="xml">
            <form string="Turns">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="start_time" widget="float_time"/>
                        <field name="end_time" widget="float_time"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- cash.control.turn action window -->
    <record id="cash_control_turn_action" model="ir.actions.act_window">
        <field name="name">Turns</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cash.control.turn</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
            </p><p>
                <!-- More details about what a user can do with this object will be OK --> 
            </p>
        </field>
    </record>

    <menuitem id="cash_control_config_type_menu_act" name="Cashbox Turns" parent="cash_control.cash_control_config_root_menu" action="cash_control_turn_action" sequence="50" groups="base.group_no_one"/>
</odoo>