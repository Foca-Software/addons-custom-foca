<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="cash_control_config_type_view_form" model="ir.ui.view">
        <field name="name">cash.control.config.type.view.form</field>
        <field name="model">cash.control.config.type</field>
        <field name="inherit_id" ref="cash_control_type.cash_control_config_type_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='config_ids']" position="after">
                <field name="uses_complement_invoice"/>
                <field name="uses_complement_credit_note"/>
            </xpath>
            <xpath expr="//notebook">
                <page string="Complement Invoice" name="complement_invoice" attrs="{'invisible':[('uses_complement_invoice','=',False)]}">
                    <group name="complement" string="">
                        <field name="ci_moment_of_creation"/>
                        <field name="ci_product_ids" widget="many2many_tags"/>
                        <field name="ci_amount"/>
                        <field name="ci_restricts_liters"/>
                        <field name="ci_liter_max_amount" attrs="{'invisible':[('ci_restricts_liters','=',False)]}"/>
                        <field name="creates_ci_in_pos" invisible="0"/>
                        <field name="creates_ci_in_cloud" invisible="0"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
