<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- complement.invoice.config form view -->
    <record id="complement_invoice_config_view_form" model="ir.ui.view">
        <field name="name">complement.invoice.config.view.form</field>
        <field name="model">complement.invoice.config</field>
        <field name="arch" type="xml">
            <form string="Complement Invoice Configuration">
                <sheet>
                    <group>
                        <group>
                            <field name="day" required="1"/>
                            <field name="turn_id" required="1"/>
                        </group>
                        <group>
                            <field name="cash_control_config_id" required="1"/>
                        </group>
                        <field name="config_line_ids">
                            <tree editable="bottom">
                                <field name="partner_id" required="1"/>
                                <field name="percentage" required="1" widget="percentage"/>
                                <field name="product_ids" widget="many2many_tags"/>
                                <field name="partner_min_amount"/>
                                <field name="partner_max_amount"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- complement.invoice.config kanban view -->
    <record id="complement_invoice_config_view_kanban" model="ir.ui.view">
        <field name="name">complement.invoice.config.view.kanban</field>
        <field name="model">complement.invoice.config</field>
        <field name="arch" type="xml">
            <kanban default_group_by="day" class="oe_background_grey o_kanban_dashboard o_control_kanban o_emphasize_colors">
                <field name="name"/>
                <field name="turn_id"/>
                <field name="cash_control_config_id"/>
                <field name="total_percentage"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_10 oe_kanban_global_click o_has_icon o_kanban_record">
                            <div>
                                <span>
                                    <field name="total_percentage" widget="progressbar"/>
                                </span>
                                <strong class="o_kanban_record_title">
                                    <field name="name" />
                                </strong>
                            </div>
                                <div class="o_kanban_card_content">
                                    <div class="row">
                                        <div class="col-12">
                                            <span>
                                                <field name="config_line_ids">
                                                    <tree>
                                                        <field name="partner_id"/>
                                                        <field name="percentage"/>
                                                    </tree>
                                                </field>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            <div class="oe_clear" />
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="complement_invoice_config_action" model="ir.actions.act_window">
        <field name="name">Complement Invoice Configuration</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">complement.invoice.config</field>
        <field name="view_mode">kanban,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
            </p>
            <p>
                <!-- More details about what a user can do with this object will be OK -->
            </p>
        </field>
    </record>

    <menuitem id="complement_invoice_config_menu_act" name="Complement Invoice" parent="cash_control.cash_control_config_root_menu" action="complement_invoice_config_action" sequence="50" groups="base.group_no_one"/>

