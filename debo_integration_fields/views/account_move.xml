<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_invoice_tree" model="ir.ui.view">
        <field name="name">account.view.move.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="session_id_debo" optional="hide"/>
            </xpath>
        </field>
    </record>

    <record id="view_account_invoice_filter" model="ir.ui.view">
        <field name="name">account.move.inherit.view.search</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="session_id_debo"/>
            </xpath>
            <xpath expr="//group[1]" position="inside">
                <filter name="session_id_debo" string="Spreadsheet" context="{'group_by':'session_id_debo'}"/>           
            </xpath>
        </field>
    </record>
	
    <record id="view_move_tree" model="ir.ui.view">
        <field name="name">account.view.move.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="session_id_debo" optional="hide"/>
            </xpath>
        </field>
    </record>

    <record id="view_account_move_filter" model="ir.ui.view">
        <field name="name">account.move.inherit.view.search</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_move_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="session_id_debo"/>
            </xpath>
            <xpath expr="//group[1]" position="inside">
                <filter name="session_id_debo" string="Spreadsheet" context="{'group_by':'session_id_debo'}"/>           
            </xpath>
        </field>
    </record>

    <record id="account_form_add_oil_card_session_id_debo" model="ir.ui.view">
        <field name="name">account.move.inherit.view.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="oil_card_number" attrs="{'invisible':[('oil_card_number','=','')]}"/>
                <field name="session_id_debo"/>
            </xpath>
        </field>
    </record>

    <!-- account.move.line inherit tree view -->
    <record id="view_move_line_tree_grouped" model="ir.ui.view">
        <field name="name">account.move.line.inherit.view.tree</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree_grouped"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='ref']" position="after">
                <field name="session_id_debo" optional="hide"/>
            </xpath>
        </field>
    </record>

    <!-- account.move.line inherit search view -->
    <record id="view_account_move_line_filter" model="ir.ui.view">
        <field name="name">account.move.line.inherit.view.search</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_account_move_line_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date']" position="after">
                <field name="session_id_debo" filter_domain="[('session_id_debo','ilike',self)]"/>
            </xpath>
            <xpath expr="//group[1]" position="inside">
                <filter string="Spreadsheet" name="group_by_spreadsheet" context="{'group_by': 'session_id_debo'}"/>
            </xpath>
        </field>
    </record>
</odoo>