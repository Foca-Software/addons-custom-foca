<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- sale.order inherit tree view -->
    <record id="view_quotation_tree" model="ir.ui.view">
        <field name="name">sale.order.inherit.view.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="session_id_debo" optional="hide"/>
            </xpath>
        </field>
    </record>
    <record id="view_order_tree" model="ir.ui.view">
        <field name="name">sale.order.inherit.view.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="session_id_debo" optional="hide"/>
            </xpath>
        </field>
    </record>
    <!-- sale.order inherit search view -->
    <record id="view_sales_order_filter" model="ir.ui.view">
        <field name="name">sale.order.inherit.view.search</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="session_id_debo"/>
            </xpath>
            <xpath expr="//group[1]" position="inside">
                <filter name="session_id_debo" string="Spreadsheet" context="{'group_by':'session_id_debo'}"/>           
            </xpath>
        </field>
    </record>

    <!-- sale.order inherit form view -->
    <record id="sale_form_add_oil_card_session_id_debo" model="ir.ui.view">
        <field name="name">sale.order.inherit.view.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="oil_card_number" attrs="{'invisible':[('oil_card_number','=','')]}"/>
                <field name="session_id_debo"/>
            </xpath>
            <xpath expr="//notebook/page[@name='order_lines']/field[@name='order_line']/tree/field[@name='price_unit']" position="before">
                <field name="default_price" optional="hide"/>
            </xpath>
        </field>
    </record>

</odoo>