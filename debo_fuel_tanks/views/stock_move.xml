<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- stock.move.line inherit tree view -->
    <record id="view_move_line_tree" model="ir.ui.view">
        <field name="name">stock.move.line.inherit.view.tree</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='reference']" position="after">
                <field name="session_id_debo" optional="show"/>
            </xpath>
        </field>
    </record>
    <!-- stock.move.line inherit search view -->
    <record id="stock_move_line_view_search" model="ir.ui.view">
        <field name="name">stock.move.line.inherit.view.search</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.stock_move_line_view_search"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='reference']" position="after">
                <field name="session_id_debo"/>
            </xpath>
            <xpath expr="//group[1]" position="inside">
                <filter string="Spreadsheet" name="session_id_debo" context="{'group_by': 'session_id_debo'}"/>
            </xpath>
        </field>
    </record>

    <!-- stock.move inherit tree view -->
    <record id="view_move_tree" model="ir.ui.view">
        <field name="name">stock.move.inherit.view.tree</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='reference']" position="after">
                <field name="session_id_debo" optional="show"/>
            </xpath>
        </field>
    </record>

    <!-- stock.move inherit search view -->
    <record id="view_move_search" model="ir.ui.view">
        <field name="name">stock.move.inherit.view.search</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_search"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="session_id_debo"/>
            </xpath>
            <xpath expr="//group[1]" position="inside">
                <filter string="Spreadsheet" name="session_id_debo" context="{'group_by': 'session_id_debo'}"/>
            </xpath>
        </field>
    </record>
</odoo>