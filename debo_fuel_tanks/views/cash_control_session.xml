<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- cash.control.session inherit tree view -->
    <record id="cash_control_session_add_fuel_form" model="ir.ui.view">
        <field name="name">cash.control.session.inherit.view.tree</field>
        <field name="model">cash.control.session</field>
        <field name="inherit_id" ref="fuel_tanks_cash_control.cash_control_session_add_fuel_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="pump_id_debo" />
            </xpath>
            <xpath expr="//page[@name='pumps']" positin="inside">
                <button name="action_test_button" type="object" string="TEST"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
            <page string="Other Dispatchs" name="other_dispatch">
                    <field name="other_dispatch_line_ids">
                        <tree>
                            <field name="order_id" string="Move Number"/>
                            <field name="name"/>
                            <field name="product_uom_qty"/>
                            <field name="product_uom"/>
                        </tree>
                    </field>
                </page>
                <page string="Pump Tests" name="pump_tests">
                    <field name="pump_test_line_ids">
                        <tree>
                            <field name="order_id" string="Move Number"/>
                            <field name="name"/>
                            <field name="product_uom_qty"/>
                            <field name="product_uom"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>