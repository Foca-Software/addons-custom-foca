<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- franchise.franchise tree view -->
    <record id="franchise_franchise_view_tree" model="ir.ui.view">
        <field name="name">franchise.franchise.view.tree</field>
        <field name="model">franchise.franchise</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
                <field name="store_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <!-- franchise.franchise form view -->
    <record id="franchise_franchise_view_form" model="ir.ui.view">
        <field name="name">franchise.franchise.view.form</field>
        <field name="model">franchise.franchise</field>
        <field name="arch" type="xml">
            <form string="Franchise">
                <sheet>
                    <group>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="description"/>
                            <field name="store_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- franchise.franchise action window -->
    <record id="franchise_franchise_action" model="ir.actions.act_window">
        <field name="name">Franchises</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">franchise.franchise</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
            </p>
            <p>
                <!-- More details about what a user can do with this object will be OK -->
            </p>
        </field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="franchise_franchise_menu_act" name="Franchises" parent="base.menu_users" action="franchise_franchise_action" sequence="50" groups="base.group_no_one"/>
</odoo>