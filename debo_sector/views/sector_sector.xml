<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="sector_sector_view_tree" model="ir.ui.view">
        <field name="name">sector.sector.view.tree</field>
        <field name="model">sector.sector</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="sector_sector_view_form" model="ir.ui.view">
        <field name="name">sector.sector.view.form</field>
        <field name="model">sector.sector</field>
        <field name="arch" type="xml">
            <form string="Sector">
                <sheet>
                    <div class='oe_title'>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="company_id" invisible="1"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sector_sector_action" model="ir.actions.act_window">
        <field name="name">Sector Configuration</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sector.sector</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="sector_menu_act" name="Sectors" parent="stock.menu_stock_config_settings" action="sector_sector_action" sequence="50"/>
</odoo>