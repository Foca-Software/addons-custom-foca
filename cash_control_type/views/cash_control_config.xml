<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- cash.control.config inherit form view -->
    <record id="cash_control_config_view" model="ir.ui.view">
        <field name="name">cash.control.config.inherit.view.form</field>
        <field name="model">cash.control.config</field>
        <field name="inherit_id" ref="cash_control.cash_control_config_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='code']" position="after">
                <field name="type_id"/>
            </xpath>
            <xpath expr="//field[@name='is_fuel_cashbox']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='is_shop_cashbox']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>