<?xml version="1.0"?>
<odoo>

    <record id="spreadsheet_partial_withdrawals_wizard" model="ir.ui.view">
        <field name="name">Cash Control Spreadsheet Partial Withdrawals Wizard</field>
        <field name="model">cc.spreadsheet.partial.withdrawals.wizard</field>
        <field name="arch" type="xml">
            <form string="Partial Withdrawals">
                <field name="session_config_id_name" invisible="1" />
                <field name="session_bank_statement_id" invisible="1" />
                <field name="session_state" invisible="1" />
                <group>
                    <field name="session_transfer_ids" nolabel="1" required="1" string="Product" type="many2many" context="{'default_ref': session_config_id_name, 'default_statement_id': session_bank_statement_id}" attrs="{'readonly': [('session_state', '=', 'validated')]}">
                        <tree>
                            <field name="date" />
                            <field name="ref" />
                            <field name="name" />
                            <field name="amount" />
                            <field name="state" />
                        </tree>
                        <form>
                            <field name="amount_sign" invisible="1" />
                            <group>
                                <group>
                                    <field name="statement_id" domain="[('journal_id.code', '=', 'TESO')]" />
                                    <field name="name" />
                                    <field name="date" class="mt-1" />
                                </group>
                                <group>
                                    <field name="ref" required="1" />
                                    <field name="amount" class="mt-1" />
                                    <field name="transaction_type_cc_select" required="1" class="mt-1" />
                                </group>
                            </group>
                        </form>
                    </field>
                </group>
                <footer>
                    <button name="confirm_withdrawals" type="object" string="Confirm" class="oe_highlight" />
                    <button special="cancel" string="Exit" />
                </footer>
            </form>
        </field>
    </record>

    <act_window id="action_spreadsheet_partial_withdrawals_wizard" name="Partial Withdrawals" res_model="cc.spreadsheet.partial.withdrawals.wizard" view_mode="form" target="new" />

</odoo> 