<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="add_ypf_fields" model="ir.ui.view">
        <field name="name">product.product.inherit.view.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='warehouse_ids']" position="after">
                <span name="update_warehouse">
                    <button string="Update Warehouse" type="action" name="%(action_view_product_change_warehouse)d" class="oe_link pt-0 oe_inline"/>
                </span>
            </xpath>
            <xpath expr="//notebook[last()]" position="inside">
                <page string="Stores" name="stores">
                    <group name="store_dependent_fields" string="Store Dependent Fields">
                        <field name="store_dependent_field_ids" nolabel="1">
                            <tree editable="bottom" decoration-muted="enabled == False">
                                <field name="product_id" invisible="1"/>
                                <field name="store_id" />
                                <field name="name"/>
                                <field name="categ_id" />
                                <field name="barcode" />
                                <field name="internal_reference" />
                                <field name="cost" />
                                <field name="price"/>
                                <field name="pricelist_id"/>
                                <field name="sector_ids" string="Available in" widget="many2many_tags"/>
                                <field name="warehouse_ids" widget="many2many_tags" optional="hide"/>
                                <field name="enabled"/>
                                <field name="taxes_id" widget="many2many_tags" optional="hide"/>
                                <field name="uom_id" optional="hide"/>
                                <field name="uom_po_id" optional="hide"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
