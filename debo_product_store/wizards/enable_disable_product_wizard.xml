<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- enable.disable.product form view -->
    <record id="enable_disable_product_view_form" model="ir.ui.view">
        <field name="name">enable.disable.product.view.form</field>
        <field name="model">enable.disable.product</field>
        <field name="arch" type="xml">
            <form string="Enable/Disable Products">
                <sheet>
                    <group>
                        <field name="product_ids" invisible="1"/>
                        <field name="store_ids" widget="many2many_tags" options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                        <field name="sector_ids_domain" invisible="1"/>
                        <field name="sector_ids" widget="many2many_tags" options="{'no_open':True,'no_create':True,'no_create_edit':True}" domain="sector_ids_domain"/>
                        <field name="enable_all"/>
                    </group>
                </sheet>
                <footer>
                    <button string="_Apply" name="action_apply" type="object" class="btn-primary" confirm="All previous sector configuration will be lost. Continue?"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>