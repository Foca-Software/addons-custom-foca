<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- stock.location inherit form view -->
    <record id="add_tank_info" model="ir.ui.view">
        <field name="name">stock.location.inherit.view.form</field>
        <field name="model">stock.location</field>
        <field name="inherit_id" ref="stock.view_location_form"/>
        <field name="arch" type="xml">
            <!-- Add your xpath here -->
            <xpath expr="//group[1]" position="inside">
                <!-- Add your fields here -->
                <group name='tank_info' string="Tank Info" attrs="{'invisible':[('usage','!=','fuel_tank')]}">
                    <field name="product_id" attrs="{'required':[('usage','=','fuel_tank')]}"/>
                    <field name="capacity" attrs="{'required':[('usage','=','fuel_tank')]}"/>
                    <field name="pump_ids">
                        <tree editable="bottom">
                            <field name="code" required="1"/>
                            <field name="name" required="1"/>
                        </tree>
                    </field>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
